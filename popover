// emissions-info.component.ts
import { Component } from '@angular/core';
import { MatDialog } from '@angular/material/dialog';
import { ConnectedPosition } from '@angular/cdk/overlay';

@Component({
  selector: 'app-emissions-info',
  template: `
    <div class="emissions-header">
      <span class="leaf-icon">ðŸŒ¿</span>
      <span class="savings-text">35% emissions savings vs. truck</span>
      <button 
        #infoButton
        class="info-icon" 
        (click)="openDialog($event)">
        <span class="info-circle">â“˜</span>
      </button>
    </div>
  `,
  styles: [`
    .emissions-header {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 12px;
      background-color: #b8e6d5;
      border-radius: 8px;
    }
    
    .leaf-icon {
      font-size: 20px;
    }
    
    .savings-text {
      flex: 1;
      font-weight: 600;
      color: #2d7a5f;
    }
    
    .info-icon {
      background: none;
      border: none;
      cursor: pointer;
      padding: 4px;
      font-size: 20px;
    }
    
    .info-circle {
      color: #2d7a5f;
    }
    
    .info-icon:hover .info-circle {
      opacity: 0.8;
    }
  `]
})
export class EmissionsInfoComponent {
  constructor(public dialog: MatDialog) {}

  openDialog(event: MouseEvent): void {
    const target = event.currentTarget as HTMLElement;
    const rect = target.getBoundingClientRect();
    
    this.dialog.open(EmissionsDialogComponent, {
      width: '520px',
      maxHeight: '90vh',
      hasBackdrop: true,
      backdropClass: 'emissions-dialog-backdrop',
      panelClass: 'emissions-dialog-panel',
      position: {
        top: `${rect.bottom + 8}px`,
        right: `${window.innerWidth - rect.right}px`
      }
    });
  }
}

